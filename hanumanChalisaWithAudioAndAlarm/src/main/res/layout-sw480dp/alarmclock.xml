<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:id="@+id/dock_menu"
	android:background="@drawable/scroll">

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="720dp"
        android:layout_above="@+id/linMenu"
        android:background="@drawable/splash1">
	<LinearLayout 
	android:layout_height="wrap_content" 
	android:gravity="right"
	android:id="@+id/linearLayout1" 
	android:layout_width="fill_parent"
	android:orientation="horizontal">
	 
	 	<TextView
	 	android:id="@+id/txtTimeVal" 
	 	android:textSize="16sp" 
	 	android:layout_width="wrap_content"  
	 	android:textColor="#000000"
		android:layout_height="wrap_content" 
		android:layout_marginRight="55dp"/>
</LinearLayout>

	<Button
	    android:id="@+id/btnDzo"
	    android:layout_width="72dp"
	    android:layout_height="72dp"
	    android:layout_marginRight="30dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/dzo" />

	<Button
	    android:id="@+id/btnDisable"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_alignBaseline="@+id/btnDzo"
	    android:layout_alignBottom="@+id/btnDzo"
	    android:layout_marginRight="25dp"
	    android:layout_toLeftOf="@+id/btnDzo"
	    android:background="@drawable/btn_disablealarm"
	    android:visibility="gone"/>
 
</RelativeLayout>
<LinearLayout
        android:id="@+id/linMenu" 
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:baselineAligned="false">
	 
	
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/linStartbtn"
		android:orientation="vertical"
		android:layout_weight="0.2"
		android:layout_gravity="center"
		android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">
		<ImageButton
                    android:id="@+id/btn_Start"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/start"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="@drawable/start"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/read"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/txtRead"
                    android:layout_gravity="center"/>
              
	</LinearLayout>
	
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/linAudiobtn"
		android:orientation="vertical"
		android:layout_weight="0.2"
		android:layout_gravity="center"
		android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">
		<ImageButton
                    android:id="@+id/btn_Play"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/play"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="@drawable/play"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/play"
                    android:id="@+id/txtPlay"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
	</LinearLayout>
	
	
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/linAlarmbtn"
		android:orientation="vertical"
		android:layout_weight="0.2"
		android:layout_gravity="center"
		android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">
		<ImageButton
                    android:id="@+id/btnSetTime"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setalarm"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="@drawable/setalarm"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm"
                    android:id="@+id/txtAlarm"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
              
	</LinearLayout>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/linAboutbtn"
		android:orientation="vertical"
		android:layout_weight="0.2"
		android:layout_gravity="center"
		android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">
		<ImageButton
                    android:id="@+id/btn_About"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/info"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="@drawable/info"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info"
                    android:id="@+id/txtInfo"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
              
	</LinearLayout>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:id="@+id/linExitbtn"
		android:orientation="vertical"
		android:layout_weight="0.2"
		android:layout_gravity="center"
		android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">
		<ImageButton
                    android:id="@+id/btn_Exit"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/exit"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="@drawable/exit"/>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exit"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/txtExit"/>
              
	</LinearLayout>
	
</LinearLayout>
</RelativeLayout>