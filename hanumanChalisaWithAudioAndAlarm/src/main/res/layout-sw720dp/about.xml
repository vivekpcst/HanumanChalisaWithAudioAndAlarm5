<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/scrolll"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/parentLayout">

    <TextView
        android:id="@+id/about_h"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/aboutapp"
        android:textColor="@color/redwine"
        android:textSize="40sp"
        android:textStyle="bold" />
	
    <LinearLayout
            android:id="@+id/linearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
          >

            <TextView
                android:id="@+id/about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="140dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text="@string/about"
                android:textColor="@color/redwine"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/about_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text="@string/about_1"
                android:textColor="@color/redwine"
                android:textSize="30sp"/>
            
            <LinearLayout
            android:id="@+id/linRateShare"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_rectangle_box"
            android:baselineAligned="true"
            android:layout_below="@+id/about_1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/btnRate"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_marginLeft="10sp"
                android:background="#FF8C00"
                android:textSize="34sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/ratethisapp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0.5"
                android:textSize="34sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                 android:background="#FF8C00"
                android:text="@string/sharethisapp"
                android:textColor="@color/white" />
            
             <Button
                android:id="@+id/btnfeedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0.5"
                android:layout_marginRight="8sp"
                android:background="#FF8C00"
                android:textSize="34sp"
                android:textStyle="bold"
                android:gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/feedback"
                android:textColor="@color/white" />
        </LinearLayout>
		</LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/linearLayout02">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dzo"
                    android:gravity="center"
                    android:contentDescription="@drawable/dzo"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout03"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:orientation="vertical" 
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/about_dotzoo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/logo_tag"
                    android:textColor="#d30000"
                    android:textSize="28sp" />

                <LinearLayout
                    android:id="@+id/linearinfo1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/emailHeader"
                        android:textColor="#d30000"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/emailId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/email"
                        android:textColor="#d30000"
                        android:textSize="28sp" 
                        android:layout_marginLeft="45dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearinfo2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/us_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:text="@string/us_name"
                        android:textColor="#d30000"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/about_us_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:text="@string/us_no"
                        android:textColor="#d30000"
                        android:textSize="28sp" 
                        android:layout_marginLeft="60dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearinfo3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/germany_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:text="@string/germany_name"
                        android:textColor="#d30000"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/about_germany_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:text="@string/germany_no"
                        android:textColor="#d30000"
                        android:textSize="28sp" />
                </LinearLayout>
            </LinearLayout>
