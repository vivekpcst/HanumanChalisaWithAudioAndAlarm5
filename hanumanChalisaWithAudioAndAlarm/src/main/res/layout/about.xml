<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/scrolll"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/about_h"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/aboutapp"
        android:textColor="@color/redwine"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

      	<TextView
	    	android:id="@+id/about"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="80dp"
            android:lineSpacingExtra="5dp"
            android:gravity="center"
            android:text="@string/about"
            android:textColor="@color/redwine"
            android:textSize="20sp" />
                
        <TextView
            android:id="@+id/about_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            
            android:lineSpacingExtra="5dp"
            
            android:text="@string/about_1"
            android:textColor="@color/redwine"
            android:textSize="20sp"/>
        
        
        <LinearLayout
            android:id="@+id/linRateShare"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_rectangle_box"
            android:baselineAligned="true"
            android:layout_below="@+id/about_1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/btnRate"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"
                android:background="#FF8C00"
                android:text="@string/ratethisapp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnShare"
                android:layout_width="138dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:background="#FF8C00"
                android:text="@string/sharethisapp"
                android:textColor="@color/white" />
            
             <Button
                android:id="@+id/btnfeedback"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0.5"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:background="#FF8C00"
                android:text="@string/feedback"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLogo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
            	android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/dzo"
                android:gravity="center"
                android:contentDescription="@drawable/dzo"/>
        </LinearLayout>

        <LinearLayout
        	android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearinfo"
          	android:orientation="vertical"
           	android:layout_marginTop="1dp"
           	android:layout_marginLeft="50dp"
           	android:layout_marginRight="50dp">
           	<TextView
               	android:id="@+id/about_dotzoo"
               	android:layout_width="fill_parent"
               	android:layout_height="wrap_content"
               	android:layout_marginTop="2dp"
               	android:lineSpacingExtra="3dp"
               	android:text="@string/logo_tag"
           	  	android:textColor="#d30000"
               	android:textSize="16sp" />
           <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:id="@+id/linearinfo1"
            	android:orientation="horizontal">   	
                <TextView
          			android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:lineSpacingExtra="3dp"
                	android:text="@string/emailHeader"
                	android:textColor="#d30000"
                	android:textSize="16sp"/>
                <TextView
          			android:id="@+id/emailId"
          			android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:lineSpacingExtra="3dp"
                	android:text="@string/email"
                	android:textColor="#d30000"
                	android:textSize="16sp"
                	android:layout_marginLeft="20dp"/>   
          </LinearLayout>          
          <LinearLayout
     		  	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:id="@+id/linearinfo2"
            	android:orientation="horizontal">
            	<TextView
          			android:id="@+id/us_name"
          			android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:lineSpacingExtra="2dp"
                	android:gravity="center"
                	android:textColor="#d30000"
                	android:textSize="16sp"
                	android:text="@string/us_name"/>
              	<TextView
          			android:id="@+id/about_us_no"
          			android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:lineSpacingExtra="2dp"
                	android:gravity="center"
                	android:textColor="#d30000"
                	android:textSize="16sp"
                	android:text="@string/us_no"
                	android:layout_marginLeft="30dp"/>
          </LinearLayout>
          <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:id="@+id/linearinfo3"
            	android:orientation="horizontal">
            	<TextView
          			android:id="@+id/germany_name"
          			android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:lineSpacingExtra="2dp"
                	android:gravity="center"
                	android:textColor="#d30000"
                	android:textSize="16sp"
                	android:text="@string/germany_name"/>
              	<TextView
          			android:id="@+id/about_germany_no"
          			android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:lineSpacingExtra="2dp"
                	android:gravity="center"
                	android:textColor="#d30000"
                	android:textSize="16sp"
                	android:text="@string/germany_no"/>
          </LinearLayout>
     	</LinearLayout> 
	</LinearLayout>
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/dock_menu"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true"
